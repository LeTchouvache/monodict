<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.github.wakhub.monodict.ui.DicItemListView
        android:id="@+id/dic_item_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/nav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/AppTheme.Main.ListView" />

    <TableLayout
        android:id="@+id/nav"
        style="@style/AppTheme.Main.Nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAligned="true"
        android:shrinkColumns="3">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/black"
            android:showDividers="middle">

           <ImageButton
                android:id="@+id/browser_button"
                style="@style/AppTheme.Main.Nav.ImageButton"
                android:layout_weight="1"
                android:src="@drawable/ic_browser"
               android:contentDescription="@string/title_activity_browser" />

            <ImageButton
                android:id="@+id/flashcard_button"
                style="@style/AppTheme.Main.Nav.ImageButton"
                android:layout_weight="1"
                android:src="@drawable/ic_flashcard"
                android:contentDescription="@string/title_activity_flashcard" />

            <ImageButton
                android:id="@+id/settings_button"
                style="@style/AppTheme.Main.Nav.ImageButton"
                android:layout_weight="1"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/title_activity_settings" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
