<com.github.wakhub.monodict.activity.MainActivityRootLayout_
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.wakhub.monodict.ui.DicItemListView
                android:id="@+id/dic_item_list_view"
                style="@style/AppTheme.Main.ListView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="left"
                android:orientation="horizontal">

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/browser_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_default"
                    android:layout_marginLeft="@dimen/space_default"
                    android:src="@drawable/ic_public_black_36dp"
                    app:fab_colorNormal="@color/white"
                    app:fab_colorPressed="@color/light_gray"
                    app:fab_colorRipple="@color/light_gray"/>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/flashcard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_default"
                    android:layout_marginLeft="@dimen/space_default"
                    android:src="@drawable/ic_flashcards_black_36dp"
                    app:fab_colorNormal="@color/white"
                    app:fab_colorPressed="@color/light_gray"
                    app:fab_colorRipple="@color/light_gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:orientation="horizontal">

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_default"
                    android:layout_marginRight="@dimen/space_default"
                    android:src="@drawable/ic_search_white_36dp"
                    app:fab_colorNormal="@color/gray"
                    app:fab_colorPressed="@color/light_gray"
                    app:fab_colorRipple="@color/light_gray"/>

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/light_gray"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:paddingTop="@dimen/space_default"
        android:paddingBottom="@dimen/space_default"
        android:clipToPadding="false"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:listSelector="@color/transparent"/>

</com.github.wakhub.monodict.activity.MainActivityRootLayout_>
