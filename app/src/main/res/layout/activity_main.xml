<com.github.wakhub.monodict.ui.MainActivityRootLayout_
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.wakhub.monodict.ui.DicItemListView
                android:id="@+id/dic_item_list_view"
                style="@style/AppTheme.Main.ListView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TableLayout
                android:id="@+id/nav"
                style="@style/AppTheme.Main.Nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="4">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageButton
                        android:id="@+id/search_button"
                        style="@style/AppTheme.Main.Nav.ImageButton"
                        android:layout_weight="1"
                        android:contentDescription="@string/action_search"
                        android:src="@drawable/ic_action_search"/>

                    <ImageButton
                        android:id="@+id/browser_button"
                        style="@style/AppTheme.Main.Nav.ImageButton"
                        android:layout_weight="1"
                        android:contentDescription="@string/title_activity_browser"
                        android:src="@drawable/ic_browser"/>

                    <ImageButton
                        android:id="@+id/flashcard_button"
                        style="@style/AppTheme.Main.Nav.ImageButton"
                        android:layout_weight="1"
                        android:contentDescription="@string/title_activity_flashcard"
                        android:src="@drawable/ic_flashcard"/>

                    <ImageButton
                        android:id="@+id/settings_button"
                        style="@style/AppTheme.Main.Nav.ImageButton"
                        android:layout_weight="1"
                        android:contentDescription="@string/title_activity_settings"
                        android:src="@drawable/ic_settings"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/light_gray"
        android:choiceMode="singleChoice"
        android:divider="@color/gray"
        android:dividerHeight="1dp"/>
</com.github.wakhub.monodict.ui.MainActivityRootLayout_>
