<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="@dimen/space_relax"
    android:minWidth="300dp"
    android:id="@+id/dialog_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blank_text"
            android:id="@+id/display_text"
            style="@style/AppTheme.DisplayText"
            android:layout_toLeftOf="@+id/speech_button"
            android:textIsSelectable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speech_button"
            android:src="@drawable/ic_action_volume_on"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/action_button" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_button"
            android:src="@drawable/ic_action_overflow"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/space_relax" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blank_text"
        android:id="@+id/translate_text"
        android:layout_margin="@dimen/space_well"
        android:textSize="@dimen/text_size_medium"
        android:minHeight="50dp"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blank_text"
        android:id="@+id/note_text"
        android:padding="@dimen/space_well"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blank_text"
        android:id="@+id/dictionary_text"
        style="@style/AppTheme.DictionaryNameText"
        android:textIsSelectable="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_button"
                android:focusableInTouchMode="false"
                android:src="@drawable/ic_action_bad"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/action_keep"
                android:id="@+id/keep_button"
                android:layout_weight="1"
                style="@style/AppTheme.Flashcard.PlainTextButton" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forward_button"
                android:focusableInTouchMode="false"
                android:src="@drawable/ic_action_good"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

</LinearLayout>
