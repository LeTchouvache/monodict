<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="@dimen/space_relax"
    android:minWidth="300dp"
    android:id="@+id/dialog_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blank_text"
        android:id="@+id/title_text"
        android:layout_margin="@dimen/space_well"
        android:textSize="20dp"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/translate_text"
        android:lines="3"
        android:gravity="top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_text" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/space_relax"
        android:layout_marginBottom="@dimen/space_well">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:text="@android:string/cancel"
                android:id="@+id/cancel_button"
                android:layout_weight="1"
                style="@style/AppTheme.Flashcard.PlainTextButton" />

            <Button
                android:text="@android:string/ok"
                android:id="@+id/save_button"
                android:layout_weight="1"
                style="@style/AppTheme.Flashcard.PlainTextButton" />
        </TableRow>

    </TableLayout>

</LinearLayout>
